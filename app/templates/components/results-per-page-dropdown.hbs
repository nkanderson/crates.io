<span class='small'>Results per page </span>

{{#rl-dropdown-container class="dropdown-container"}}
  {{!-- TODO: determine what the data-test-* items are for, and what the values should be --}}
  {{#rl-dropdown-toggle tagName="a" class="dropdown" data-test-current-per-page=true}}
    {{ per_page }}
    <span class='arrow'></span>
  {{/rl-dropdown-toggle}}

  {{#rl-dropdown tagName="ul" class="dropdown" closeOnChildClick="a:link"}}
    <li>
      {{#link-to (query-params page=1 per_page=10)}}
        10
      {{/link-to}}
    </li>
    <li>
      {{#link-to (query-params page=1 per_page=25)}}
        25
      {{/link-to}}
    </li>
    <li>
      {{#link-to (query-params page=1 per_page=50)}}
        50
      {{/link-to}}
    </li>
    <li>
      {{#link-to (query-params page=1 per_page=100)}}
        100
      {{/link-to}}
    </li>
  {{/rl-dropdown}}
{{/rl-dropdown-container}}
